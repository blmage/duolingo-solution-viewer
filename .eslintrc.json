{
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jsdoc/recommended",
        "preact"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "jsdoc",
        "react"
    ],
    "rules": {
        "jest/no-deprecated-functions": "off"
    },
    "settings": {
        "jsdoc": {
            "mode": "typescript"
        }
    }
}
